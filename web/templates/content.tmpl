{{ template "before" . }}
{{ template "header" . }}

<main>
    <h1>{{.PageTitle}}</h1>
    <h2>{{.PageSubtitle}}</h2>
    {{if eq .Type "post"}}
    <p>
      <b>Posted on:</b> {{.CreatedAt.Format "2006-01-02"}}
    </p>
    {{end}}

    {{.Body}}

</main>

{{ template "footer" . }}
{{ template "after" . }}
